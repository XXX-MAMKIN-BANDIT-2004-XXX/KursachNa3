<Page x:Class="KursachNa3.Serialise"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursachNa3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Serialise">

    <Grid Background="DarkOrchid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите адрес файла" FontSize="40"/>
            <TextBox x:Name="fileName" Background="DarkMagenta" Margin="20" FontSize="15"/>
            <Button Content="Сохранить" Background="DarkMagenta" Margin="20" Width="70" Click="Serialise_Click"/>
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="Назад" Margin="10" MinWidth="100" MinHeight="20" Click="Back_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
